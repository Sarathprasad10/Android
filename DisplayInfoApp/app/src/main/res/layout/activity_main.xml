<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/calculator_background"
    android:gravity="center">

    <!-- Display for calculator output -->

    <!-- Row 1: Buttons 7, 8, 9, Divide (/), Delete (Del) -->

    <TextView
        android:id="@+id/textViewDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/black"
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:singleLine="true"
        android:text="0"
        android:textColor="@color/text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_operator"/>

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/button_operator"
            android:text="C"
            android:textColor="@color/text_color"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Row 2: Buttons 4, 5, 6, Multiply (x) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_operator"/>
    </LinearLayout>

    <!-- Row 3: Buttons 1, 2, 3, Subtract (-) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_operator"/>
    </LinearLayout>

    <!-- Row 4: Buttons 0, Decimal (.), Equals (=), Add (+) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_number"/>

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background_light"
            android:text="."
            android:textColor="@color/text_color"
            android:textSize="20sp"
            app:rippleColor="#494A50" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_equals"/>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/button_operator"/>
    </LinearLayout>

</LinearLayout>
